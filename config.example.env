# Required Configuration
VOYAGE_API_KEY=your_voyage_api_key_here

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here_if_using_cloud

# Collection Configuration
COLLECTION_NAME=codebase
EMBEDDING_MODEL=voyage-code-3

# Privacy-Optimized Processing Configuration
BATCH_SIZE=100
CHUNK_SIZE=800                    # Privacy-optimized: 800 chars max (100-1000 range)
CHUNK_OVERLAP=100                 # Reduced overlap for privacy
MAX_FILE_SIZE=1048576             # 1MB file size limit

# File Filtering
EXCLUDE_PATTERNS=*.git*,node_modules/**,dist/**,build/**,*.log,*.tmp,*.temp,*.cache,*.lock,*.min.js,*.min.css,*.map
SUPPORTED_EXTENSIONS=.ts,.js,.tsx,.jsx,.py,.java,.cpp,.c,.h,.go,.rs,.cs,.php,.rb,.swift,.kt,.scala,.md,.txt,.json,.yaml,.yml,.html,.css,.scss,.less

# Debug (optional)
DEBUG=0 